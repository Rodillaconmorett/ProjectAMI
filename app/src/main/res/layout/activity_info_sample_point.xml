<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SamplePointInfoActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:columnCount="1"
        android:rowCount="7"
        android:id="@+id/gridLayout">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="116dp"
            >

            <ImageView
        android:id="@+id/siteImage"
        android:layout_width="match_parent"
        android:layout_height="116dp"
        android:layout_column="0"
        android:layout_row="0"

        />
        </RelativeLayout>


        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:columnCount="3"
            android:rowCount="1">


            <ListView
                android:id="@+id/datesList"

                android:layout_width="155dp"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:layout_row="0"
                />

            <TextView
                android:id="@+id/siteName"
                android:layout_width="225dp"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:layout_row="0"
                android:fontFamily="sans-serif"
                android:gravity="left|center"
                android:text="Nombre"
                android:textColor="#FFFFFF"
                android:textSize="28sp" />
        </GridLayout>

        <TextView
        android:id="@+id/siteDescription"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_column="0"
        android:layout_row="2"
        android:fontFamily="sans-serif"
        android:text="Descripcion"
        android:textSize="18sp" />


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="350dp"
            android:layout_height="3dp"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_row="3"
            android:gravity="center"
             />

        <GridLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_column="0"
        android:layout_row="4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:columnCount="2"
        android:rowCount="1"
        android:layout_below="@+id/gridLayout">

        <RelativeLayout
            android:layout_width="192dp"
            android:layout_height="match_parent"
            >

            <ImageView
                android:id="@+id/imageViewSpecies"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="false"
                android:layout_centerVertical="true"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:src="@drawable/especies" />

            <TextView
                android:id="@+id/textTotSpecies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="#"
                android:textColor="@color/especiesColor"
                android:textSize="36sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="192dp"
            android:layout_height="match_parent"
            >

            <ImageView
                android:id="@+id/imageViewScore"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="false"
                android:layout_centerVertical="true"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:src="@drawable/puntaje"
                app:srcCompat="@drawable/puntaje" />

            <TextView
                android:id="@+id/textTotScore"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:layout_row="0"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="#"
                android:textColor="@color/puntajeColor"
                android:textSize="36sp"
                android:textStyle="bold"
                />
        </RelativeLayout>

    </GridLayout>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="350dp"
            android:layout_height="3dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_row="5"
            android:layout_column="0"
           />
</GridLayout>
</RelativeLayout>