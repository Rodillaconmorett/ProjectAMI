<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SamplePointInfoActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:columnCount="1"
        android:rowCount="5"
        android:id="@+id/gridLayout">


    <ImageView
        android:id="@+id/siteImage"
        android:layout_width="match_parent"
        android:layout_height="116dp"
        android:layout_column="0"
        android:layout_row="0"

        />


        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="#4487ED"
            android:columnCount="3"
            android:rowCount="1">

            <!--
            <EditText
                android:id="@+id/editText"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_column="1"
                android:gravity="left|center"
                android:inputType="date" />
            -->


            <ListView
                android:id="@+id/datesList"
                android:layout_width="158dp"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:gravity="left|center"

                />

            <TextView
                android:id="@+id/siteName"
                android:layout_width="225dp"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:layout_row="0"
                android:fontFamily="sans-serif"
                android:gravity="left|center"
                android:text="Nombre"
                android:textSize="36sp" />
        </GridLayout>

        <TextView
        android:id="@+id/siteDescription"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_column="0"
        android:layout_row="2"
        android:fontFamily="sans-serif"
        android:text="Descripcion"
        android:textSize="18sp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_column="0"
        android:layout_row="3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:columnCount="2"
        android:rowCount="1"
        android:layout_below="@+id/gridLayout">

        <RelativeLayout
            android:layout_width="192dp"
            android:layout_height="match_parent"
            >

            <ImageView
                android:id="@+id/imageViewSpecies"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="false"
                android:layout_centerVertical="true"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:src="@drawable/especies" />

            <TextView
                android:id="@+id/textTotSpecies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_column="0"
                android:layout_row="0"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="#"
                android:textColor="#8DC63F"
                android:textSize="36sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="192dp"
            android:layout_height="match_parent"
            >

            <ImageView
                android:id="@+id/imageViewScore"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="false"
                android:layout_centerVertical="true"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:src="@drawable/puntaje"
                app:srcCompat="@drawable/puntaje" />

            <TextView
                android:id="@+id/textTotScore"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:layout_row="0"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="#"
                android:textColor="#F7941E"
                android:textSize="36sp"
                android:textStyle="bold"
                />
        </RelativeLayout>

    </GridLayout>

</GridLayout>
</RelativeLayout>