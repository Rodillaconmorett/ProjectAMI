<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:layout_gravity="center"
    android:orientation="vertical">


    <GridLayout
        android:id="@+id/principalgl"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:columnCount="1"
        android:rowCount="3"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:columnCount="1"
            android:rowCount="1">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/logo_lifefinder" />

        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:columnCount="1"
            android:rowCount="5">

            <EditText
                android:id="@+id/userInput"
                android:layout_width="250dp"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_row="0"
                android:hint="Nombre de usuario"
                android:inputType="textEmailAddress" />

            <GridLayout
                android:layout_width="250dp"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_row="1"
                android:columnCount="1"
                android:rowCount="1">

                <EditText
                    android:id="@+id/passwordInput"
                    android:layout_width="250dp"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:hint="Contraseña"
                    android:inputType="textPassword" />


            </GridLayout>


            <Button
                android:id="@+id/buttonLogin"
                android:layout_width="250dp"
                android:layout_height="35dp"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_row="2"
                android:background="@color/temaLifeFinder"
                android:text="Iniciar sesión"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="200dp"
                android:layout_height="2dp"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_row="3"
                android:gravity="center"
                app:srcCompat="@color/common_google_signin_btn_text_dark_disabled" />

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_row="4"
                android:columnCount="2"
                android:rowCount="1">

                <com.google.android.gms.common.SignInButton
                    android:id="@+id/btnLogGoogle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:gravity="center"
                    android:textAllCaps="false" />


                <!--<Button
                        android:id="@+id/btnLogGoogle"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:minHeight="0dp"
                        android:minWidth="0dp"
                        android:layout_column="0"
                        android:textAllCaps="false"
                        android:layout_row="0"
                        android:text="Iniciar sesión con Google"
                        android:gravity="right"
                        android:textColor="@color/googleColor"
                        />
                        -->

            </GridLayout>

        </GridLayout>

    </GridLayout>

</android.support.constraint.ConstraintLayout>