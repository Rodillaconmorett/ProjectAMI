<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true"
    android:layout_gravity="center"
    >


    <GridLayout
        android:id="@+id/principalgl"
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:columnCount="1"
        android:rowCount="3"
        >

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:columnCount="1"
                android:rowCount="1"
                >

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/logo_lifefinder" />

            </GridLayout>
        <!--<RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_column="0"
            android:layout_row="1"
            >-->

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:columnCount="1"
                android:rowCount="5"
                android:layout_centerVertical="true"
                android:layout_centerInParent="true"
                >

                <EditText
                    android:id="@+id/userInput"
                    android:layout_width="250dp"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:hint="Nombre de usuario"
                    android:inputType="textEmailAddress"
                    android:layout_column="0"
                    android:layout_row="0"
                    />

                <GridLayout
                    android:layout_width="250dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:columnCount="1"
                    android:rowCount="1"
                    >

                    <EditText
                        android:id="@+id/passwordInput"
                        android:layout_width="250dp"
                        android:hint="Contraseña"
                        android:inputType="textPassword"
                        android:layout_column="0"
                        android:layout_row="0"
                        />



                </GridLayout>



                <Button
                    android:id="@+id/buttonLogin"
                    android:layout_width="250dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_column="0"
                    android:layout_row="2"
                    android:layout_marginTop="20dp"
                    android:text="Iniciar sesión"
                    android:textAllCaps="false"
                    android:textSize="20dp"
                    android:background="@color/temaLifeFinder"
                    android:textColor="#FFFFFF"
                    />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="200dp"
                    android:layout_height="2dp"
                    android:layout_column="0"
                    android:layout_marginTop="30dp"
                    android:layout_gravity="center"
                    android:layout_row="3"
                    android:gravity="center"
                    app:srcCompat="@color/common_google_signin_btn_text_dark_disabled"
                    />

                <GridLayout
                    android:layout_width="210dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_row="4"
                    android:layout_marginTop="20dp"
                    android:columnCount="1"
                    android:rowCount="1"
                    >

                    <com.google.android.gms.common.SignInButton
                         android:id="@+id/btnLogGoogled"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:minHeight="0dp"
                         android:minWidth="0dp"
                         android:layout_column="0"
                         android:textAllCaps="false"
                         android:layout_row="0"
                         android:layout_gravity="center"
                        />



                    <!--<Button
                        android:id="@+id/btnLogGoogle"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:minHeight="0dp"
                        android:minWidth="0dp"
                        android:layout_column="0"
                        android:textAllCaps="false"
                        android:layout_row="0"
                        android:text="Iniciar sesión con Google"
                        android:gravity="right"
                        android:textColor="@color/googleColor"
                        />
                        -->

                </GridLayout>

            </GridLayout>

    </GridLayout>
        <!--</RelativeLayout>-->

</RelativeLayout>